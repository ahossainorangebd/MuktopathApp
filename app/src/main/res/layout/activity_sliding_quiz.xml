<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlidingQuizActivity"
    android:orientation="vertical"
    android:background="@color/Colorpeace"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/QuizSliderviewPagerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        >

        <com.itsronald.widget.ViewPagerIndicator
            android:id="@+id/view_pager_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center_vertical"
            android:background="@color/Colorpeace"
            android:outlineSpotShadowColor="@color/colorPrimary"
            app:selectedDotColor="@color/colorFadedBlack"
            android:layout_marginBottom="5dp"
            />

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="33dp"

        >

        <Button
            android:id="@+id/prevButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:textStyle="bold"
            android:background="@color/Colorpeace"
            android:layout_marginRight="20dp"
            android:elevation="20dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/nextButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textStyle="bold"
            android:background="@color/Colorpeace"
            android:elevation="20dp"
            android:layout_marginLeft="100dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>