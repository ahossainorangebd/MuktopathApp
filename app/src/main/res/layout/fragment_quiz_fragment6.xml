<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/quizfragment1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageDetailFragment3"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:background="@color/Colorpeace"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="কুইজ ৬"
        android:textSize="18sp"
        android:textColor="@color/colorVoldemort"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/quizTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz 1"
        android:textSize="18sp"
        android:textColor="@color/colorVoldemort"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/quiz_options_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="33dp"

        >

        <Button
            android:id="@+id/prevButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:textStyle="bold"
            android:background="@color/Colorpeace"
            android:layout_marginRight="20dp"
            android:elevation="20dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/nextButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textStyle="bold"
            android:background="@color/Colorpeace"
            android:elevation="20dp"
            android:layout_marginLeft="100dp"
            android:layout_gravity="center"
            />

    </LinearLayout>


</LinearLayout>