<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CourseDetailActivity"
    android:background="#7f8a93"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:background="@drawable/coverdetailpage"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="সাইবার সিকিউরিটি কোর্স"
            android:textColor="@color/Colorpeace"
            android:layout_gravity="left"
            android:textSize="28sp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="মুক্তপাঠ"
            android:layout_gravity="left"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/Colorpeace"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="#ffffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorLighterPain"
            android:padding="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Colorpeace"
                android:orientation="horizontal"
                android:padding="2dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ইউনিট ৩ঃ প্রাতিষ্ঠানিক যোগাযোগে ইমেইলের ব্যবহার ও প্রয়োজনীয় সতর্কতা"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >
                
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp" 
                    android:text="1"
                    android:textAlignment="center"
                    android:background="@drawable/round_style"
                    android:textColor="@color/Colorpeace"
                    />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/round_style"
                    android:textColor="@color/Colorpeace"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:background="@drawable/round_style_purple"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/Colorpeace"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="4"
                    android:textAlignment="center"
                    android:background="@drawable/round_style"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/Colorpeace"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="5"
                    android:textAlignment="center"
                    android:background="@drawable/round_style"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/Colorpeace"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ইউনিট ৩ঃ প্রাতিষ্ঠানিক যোগাযোগে ইমেইলের ব্যবহার ও প্রয়োজনীয় সতর্কতা"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:background="#c1c1c1"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                />



        </LinearLayout>

    </LinearLayout>

    <!--<WebView
        android:id="@+id/myWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />-->

</LinearLayout>