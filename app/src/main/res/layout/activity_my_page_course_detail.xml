<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CourseDetailActivity"
    android:background="#fff"
    >

    <ImageView
        android:id="@+id/CourseDetailCoverImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coverdetailpage"
        />

    <LinearLayout
        android:id="@+id/upperPart"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="সাইবার সিকিউরিটি কোর্স"
            android:textColor="@color/Colorpeace"
            android:layout_gravity="left"
            android:textSize="28sp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/ownerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="মুক্তপাঠ"
            android:layout_gravity="left"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/Colorpeace"
            />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/belowPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="#ffffff"
        android:layout_below="@+id/upperPart"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:background="@drawable/round_style"
                    android:textColor="@color/Colorpeace"
                    />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/round_style"
                    android:textColor="@color/Colorpeace"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:background="@drawable/round_style_purple"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/Colorpeace"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="4"
                    android:textAlignment="center"
                    android:background="@drawable/round_style"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/Colorpeace"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="5"
                    android:textAlignment="center"
                    android:background="@drawable/round_style"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/Colorpeace"
                    />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MasterMenuHeader"
            >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpagerNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <orangebd.newaspaper.mymuktopathapp.SlidingTabLayout
                android:id="@+id/sliding_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000"
                />

        </RelativeLayout>



    </LinearLayout>


    <!--<WebView
        android:id="@+id/myWebView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />-->

</RelativeLayout>