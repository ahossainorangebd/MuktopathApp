<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyPageDetailFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorLighterPain"
        android:padding="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Colorpeace"
            android:orientation="horizontal"
            android:padding="2dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ইউনিট"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/unitOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="4dp"
                />

            <TextView
                android:id="@+id/unitTitleId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" প্রাতিষ্ঠানিক যোগাযোগে ইমেইলের ব্যবহার ও প্রয়োজনীয় সতর্কতা"
                android:textColor="#000000"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        />

</LinearLayout>