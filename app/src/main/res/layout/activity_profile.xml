                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/userNameId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loading Name.."
                                android:textColor="#fff"
                                android:layout_gravity="center"
                                android:textSize="20sp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:padding="8dp"
                                >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="প্রোফাইল "
                                        android:textSize="14sp"
                                        android:textColor="@color/Colorpeace"
                                        />

                                    <TextView
                                        android:id="@+id/proCompleteness"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="n "
                                        android:textSize="14sp"
                                        android:textColor="@color/Colorpeace"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="%"
                                        android:textSize="14sp"
                                        android:textColor="@color/Colorpeace"
                                        />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="150dp"
                                    android:padding="2dp"
                                    android:background="@drawable/button_style_edit_text"
                                    >

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:text="পয়েন্টস: "
                                        android:textSize="14sp"
                                        android:textColor="@color/colorVoldemort"
                                        />

                                    <TextView
                                        android:id="@+id/gamificationPoint"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="n "
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorVoldemort"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="10dp"
                                        />

                                </LinearLayout>

                            </LinearLayout>


                            <ProgressBar
                                android:id="@+id/determinateBar"
                                style="@android:style/Widget.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:padding="16dp"
                                android:layout_height="wrap_content"
                                android:progress="0"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/yesCourseCompleteLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:id="@+id/runningCourseBtnId"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@color/colorPrimaryDark"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:elevation="6dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="চলমান কোর্স"
                                android:textAlignment="center"
                                android:textColor="@color/Colorpeace"
                                android:textSize="18sp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:id="@+id/numberOfRunningCourse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:background="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="@color/Colorpeace"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="22sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="টি"
                                    android:gravity="center"
                                    android:textColor="@color/Colorpeace"
                                    android:textSize="18sp" />

                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/endedCourseBtnId"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@color/colorPrimaryDark"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:elevation="6dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="সম্পন্ন কোর্স"
                                android:textAlignment="center"
                                android:textColor="@color/Colorpeace"
                                android:textSize="18sp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:id="@+id/numberOfCompletedCourse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:layout_gravity="center"
                                    android:text="০"
                                    android:background="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="@color/Colorpeace"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="22sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="টি"
                                    android:gravity="center"
                                    android:textColor="@color/Colorpeace"
                                    android:textSize="18sp" />

                            </LinearLayout>



                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        >
                        <LinearLayout
                            android:id="@+id/nonEndedCourseBtnId"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@color/colorPrimaryDark"
                            android:padding="10dp"
                            android:orientation="vertical"
                            android:elevation="6dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="অসমাপ্ত কোর্স"
                                android:textAlignment="center"
                                android:textColor="@color/Colorpeace"
                                android:textSize="18sp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:id="@+id/numberOfIncompletedCourse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:background="@color/colorPrimary"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:textColor="@color/Colorpeace"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="22sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="5dp"
                                    android:text="টি"
                                    android:gravity="center"
                                    android:textColor="@color/Colorpeace"
                                    android:textSize="18sp" />

                            </LinearLayout>



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/wishListButtonId"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@color/colorPrimaryDark"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:elevation="6dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="পছন্দের কোর্স"
                                android:textAlignment="center"
                                android:textColor="@color/Colorpeace"
                                android:textSize="18sp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:id="@+id/numberOfWishlistCourse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="3dp"
                                    android:layout_gravity="center"
                                    android:text="0"
