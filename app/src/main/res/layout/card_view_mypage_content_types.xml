<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#fff"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Colorpeace"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="5dp"
                    >

                    <ImageView
                        android:id="@+id/contentTypeIcons"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/play_button_round_bold"
                        />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/open_book_pdf"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/textViewName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="ডিজিটাল মার্কেটিং"
                        android:textColor="@color/colorVoldemort"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        />

                    <ImageView
                        android:id="@+id/cloudDownloadBtn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cloud_download_icon_black"
                        android:foregroundGravity="right"
                        android:layout_marginLeft="20dp"
                        />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrayLight"
                    >

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


